<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if user_signed_in? %>
          <td><%= post.user.name %></td>
        <% end %>
        <td><%= post.title %></td>
        <td><%= post.body %></td>

      </tr>

    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Post', new_posts_path %>

<%= link_to 'Sign In', new_user_session_path %>

<%= link_to "Logout", destroy_user_session_path, method: :delete %>